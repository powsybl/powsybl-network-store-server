<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="bouhoursant" id="2986331049290-1">
        <createTable tableName="tombstoned">
            <column name="equipmentid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="equipmenttype" type="VARCHAR(255)"/>
            <column name="networkuuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="variantnum" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="tombstoned_networkuuid_variantnum_equipmenttype_idx" tableName="tombstoned">
            <column name="networkuuid"/>
            <column name="variantnum"/>
            <column name="equipmenttype"/>
        </createIndex>
        <addPrimaryKey columnNames="networkuuid, variantnum, equipmentid" constraintName="tombstoned_pkey" tableName="tombstoned"/>
        <createTable tableName="tombstonedextension">
            <column name="equipmentid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="networkuuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="variantnum" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="tombstonedextension_networkuuid_variantnum_idx" tableName="tombstonedextension">
            <column name="networkuuid"/>
            <column name="variantnum"/>
        </createIndex>
        <addPrimaryKey columnNames="networkuuid, variantnum, equipmentid, name" constraintName="tombstonedextension_pkey" tableName="tombstonedextension"/>
    </changeSet>
</databaseChangeLog>
